{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },
  "configurePresets": [

    {
      "name": "editor",
      "description": "Build GDExtension for the Editor",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "GODOT_EXECUTABLE": "C:\\git\\godot\\bin\\godot.windows.editor.x86_64.exe",
        "GEL_TOOLS_ENABLED": "ON",
        "GEL_OPTIMISATION_MODE": "speed"
      }
    },
    {
      "name": "editor_debug",
      "description": "Build GDExtension for the Editor with debug symbols",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "GEL_TOOLS_ENABLED": "ON",
        "GEL_OPTIMISATION_MODE": "speed_trace",
        "GODOT_EXECUTABLE": "C:\\git\\godot\\bin\\godot.windows.editor.debug.x86_64.exe"
      }
    },
    {
      "name": "editor_debug_dev",
